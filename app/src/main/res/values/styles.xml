<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/main_title_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="subTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sub_title_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="descText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/desc_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mainTitle.header" parent="mainTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="mainTitle.todayRecommend" parent="mainTitle">
        <item name="android:layout_margin">@dimen/main_title_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainTitle.mypage" parent="mainTitle">
        <item name="android:layout_marginLeft">@dimen/sub_title_margin</item>
    </style>

    <style name="mainTitle.checkStatus" parent="mainTitle">
        <item name="android:layout_marginTop">@dimen/desc_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bookTitle" parent="subTitle">
        <item name="android:layout_margin">@dimen/main_title_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dDay" parent="mainTitle">
        <item name="android:paddingLeft">@dimen/d_day_padding_left</item>
        <item name="android:paddingRight">@dimen/d_day_padding_left</item>
        <item name="android:paddingTop">@dimen/d_day_padding_top</item>
        <item name="android:paddingBottom">@dimen/d_day_padding_top</item>
        <item name="android:layout_marginRight">@dimen/sub_title_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="subTitle.homeTitle" parent="subTitle">
        <item name="android:layout_margin">@dimen/sub_title_margin</item>
    </style>

    <style name="subTitle.mypage" parent="subTitle">
        <item name="android:layout_marginTop">@dimen/desc_margin</item>
        <item name="android:layout_marginLeft">@dimen/main_title_margin</item>
    </style>

    <style name="bookAuthor" parent="descText">
        <item name="android:layout_marginTop">@dimen/main_title_margin</item>
        <item name="android:layout_marginLeft">@dimen/main_title_margin</item>
    </style>

    <style name="mainButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/main_btn_padding_top</item>
        <item name="android:paddingBottom">@dimen/main_btn_padding_top</item>
        <item name="android:layout_marginBottom">@dimen/main_btn_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/main_btn_margin_left</item>
        <item name="android:layout_marginRight">@dimen/main_btn_margin_left</item>
        <item name="android:background">@drawable/custom_main_btn_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/main_title_textsize</item>
    </style>

    <style name="filterButton" parent="subTitle">
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/filter_margin_left</item>
        <item name="android:paddingStart">@dimen/filter_padding_left</item>
        <item name="android:paddingEnd">@dimen/filter_padding_left</item>
        <item name="android:paddingTop">@dimen/filter_padding_top</item>
        <item name="android:paddingBottom">@dimen/filter_padding_top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_main_btn_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>